source 'https://github.com/gini/gini-podspecs.git'
source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '9.0'

use_frameworks!

def project_pods
    pod 'Gini-iOS-SDK', :git => 'git@github.com:gini/gini-sdk-ios.git', :branch => 'develop'
    pod 'GiniVision', :path => '../'
    pod 'GiniVision/Networking+Pinning', :path => '../'
end

target 'Example Swift' do

    project_pods	

    target 'GiniVision_Tests' do
        inherit! :search_paths
    end

    target 'GiniVision_UITests' do
        inherit! :search_paths
    end
end

target 'Example ObjC' do

    project_pods

end
